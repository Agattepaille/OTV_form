{# templates/form/fields.html.twig #}
{% block form_row %}
    <div class="form-group">
        {{ form_label(form) }}
        <span class="req" {% if not required %}style="display: none;"{% endif %}>*</span>
        {{ form_widget(form, {'attr': {'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : '')}}) }}
        {% if form.vars.errors|length > 0 %}
            <div class="invalid-feedback">
                {{ form_errors(form) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
